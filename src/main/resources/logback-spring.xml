<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <logger name="org.springframework.web" level="WARN"/>

    <property name="LOG_PATH" value="." />

    <appender name="CUSTOMCONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level %date - %logger{0}: %msg %n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="CUSTOMFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/main.log</file>
        <encoder>
            <pattern>%level %date - %logger{0}: %message %n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/main.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>
    </appender>


    <logger name="com.byteshaper" level="INFO" additivity="true" />

    <root level="INFO">
        <appender-ref ref="CUSTOMCONSOLE" />
        <appender-ref ref="CUSTOMFILE" />
    </root>
</configuration>
